<?xml version="1.0" encoding="UTF-8"?>
<record>
  <!-- 通用属性 -->
  <attribute id="0x0001">
    <sequence>
      <uuid value="0x1124"/>  <!-- HID服务 -->
    </sequence>
  </attribute>

  <!-- 协议描述 -->
  <attribute id="0x0004">
    <sequence>
      <sequence>
        <uuid value="0x0100"/>  <!-- L2CAP -->
      </sequence>
      <sequence>
        <uuid value="0x0011"/>  <!-- HIDP -->
        <uint8 value="0x13"/>   <!-- 通道号 -->
      </sequence>
    <sequence>
        <uuid value="0x0000"/>  <!-- 保留位 -->
    </sequence>

    </sequence>
  </attribute>

  <!-- HID描述符 -->
  <attribute id="0x0200">
    <text value="HID 设备"/>     <!-- 设备名称 -->
  </attribute>

  <!-- HID设备描述符 -->
  <attribute id="0x0201">
    <sequence>
      <uint16 value="0x0111"/> <!-- HID规范版本1.1 -->
      <uint8 value="0x00"/>    <!-- 国家代码（不本地化） -->
      <uint8 value="0x01"/>    <!-- 描述符数量 -->
      <sequence>
        <uint8 value="0x22"/>  <!-- 报告描述符类型 -->
        <uint16 value="0x0100"/>
      </sequence>
    </sequence>
  </attribute>

  <!-- 设备子类（键盘+鼠标组合） -->
  <attribute id="0x0202">
    <uint8 value="0xC0"/>      <!-- 0x40=键盘，0x80=鼠标，0xC0组合 -->
  </attribute>

  <!-- 蓝牙配置文件描述符 -->
  <attribute id="0x0009">
    <sequence>
      <sequence>
        <uuid value="0x1124"/>  <!-- HID服务UUID -->
        <uint16 value="0x0100"/> <!-- 版本号1.0 -->
      </sequence>
    </sequence>
  </attribute>
</record>